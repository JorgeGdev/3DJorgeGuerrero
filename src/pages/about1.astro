---

import Icon from '../components/Icon.astro';

import BaseLayout from '../layouts/BaseLayout.astro';
import ContactCTA from '../components/ContactCTA.astro';
import Hero from '../components/Hero.astro';
import CallToAction from '../components/CallToAction.astro';
import KitchenModel from '../components/about2/KitchenModel.jsx'

---

<BaseLayout title="About | Jorge Guerrero NZ" description="First Steps in NZ">
	<div class="stack gap-20">
		<div class="mainContainer">

			<Hero
			title="About Jorge"
			subtitle="From service to software."
			
		>
			
		</Hero>

		<div class="canvasContainer">
			<KitchenModel client:visible />
			
			
		</div>

		<div class="arrows">
			<span class="iconarrowL">
				<CallToAction href='/about/'>
					<Icon icon="arrow-left" size="1.2em"  />
					Prev.
				</CallToAction>
			</span>
			<span class="iconarrowR">
				<CallToAction href='/about2/'>
					<Icon icon="arrow-right" size="1.2em" />
					Next
				</CallToAction>
				
			</span>
		</div>

		
			
		</div>
		
		<main class="wrapper about">

			

			<section>
				<h2 class="section-title">Background</h2>
				<div class="content">
					<p>
						Before transitioning into the tech industry, I worked for several years in the hospitality sector in New Zealand. This experience sharpened my ability to thrive in fast-paced environments, collaborate with diverse teams, and maintain consistency under pressure.
					</p>
					<p>
						These skills have proven invaluable in software development especially when facing tight deadlines, solving complex problems, and contributing to collaborative projects. My background outside of tech has shaped me into a resilient, reliable, and highly adaptable developer.
					</p>
					
				</div>
			</section>
			
			<section>
				<h2 class="section-title">Skills</h2>
				<div class="content">
					<p>Inventory Management, Team Performance Improvement, Culinary Skills</p>
				</div>
			</section>
		</main>

		<ContactCTA />
	</div>
</BaseLayout>

<style>

	.mainContainer{
		display: flex;
		flex-direction: column;
		align-items: center;
		justify-content: center;
		

	}

	.canvasContainer{
		height: 500px;
		width: 95%;
		margin-bottom: 2em;
		
	}

	.arrows{

		height: 5vh;
		width: 90%;
		display: flex;
		flex-direction: row;
		justify-content: space-between;
		align-items: center;
		
		
	}

	.iconarrowL{
		
		margin: 20em, 30em;
	}

	.iconarrowR{
		
		margin: 20em, 30em;
	}


	
	.about {
		display: flex;
		flex-direction: column;
		gap: 3.5rem;
		

	}

	img {
		margin-top: 1.5rem;
		border-radius: 1.5rem;
		box-shadow: var(--shadow-md);
		width: 90%;

	}

	section {
		display: flex;
		flex-direction: column;
		gap: 0.5rem;
		color: var(--gray-200);
	}

	.section-title {
		grid-column-start: 1;
		font-size: var(--text-xl);
		color: var(--gray-0);
	}

	.content {
		grid-column: 2 / 4;
	}

	.content :global(a) {
		text-decoration: 1px solid underline transparent;
		text-underline-offset: 0.25em;
		transition: text-decoration-color var(--theme-transition);
	}

	.content :global(a:hover),
	.content :global(a:focus) {
		text-decoration-color: currentColor;
	}

	@media (min-width: 50em) {
		.about {
			display: grid;
			grid-template-columns: 1fr 60% 1fr;
		}

		.about > :global(:first-child) {
			grid-column-start: 2;
		}

		section {
			display: contents;
			font-size: var(--text-lg);
		}
	}
</style>
